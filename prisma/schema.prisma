generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Schedule{
  id Int @default(autoincrement()) @id
  title String
  description String? @db.Text
  color String
  width Int
  startDate String
  endDate String
  type String
  //  1-n relation with User
  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt 
}


model User {
  id Int @default(autoincrement()) @id
  email String
  password String
  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt 
}

model Note{
  id Int @default(autoincrement()) @id
  title String @db.Text
  content String @db.LongText
  // owner 
  date String
  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt 
}

model TodoList {
  id Int @default(autoincrement()) @id
  title String
  description String @db.LongText
  dueDate DateTime
  startTime String
  endTime String
  complete Boolean
  // owner 
  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt 
}